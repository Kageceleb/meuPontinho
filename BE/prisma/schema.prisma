generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ra   BigInt
  hash String

  firstName String?
  lastName  String?

  userType String?
}

model ClokIn {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  //flag      Flag?
  locationLat String
  locationLon String
}

model Internship {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  name              String
  supervisorTeacher String
  supervisorIntern  String

  locationLat String
  locationLon String
}
